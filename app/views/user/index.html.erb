<%= form_tag( '/user/signin' ) do -%>
  <div class="form-group">
    <label for="email">Email address</label>
    <%= text_field_tag 'email', :class => 'form-control', params[:email], :placeholder => "Enter email" %>
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <%= text_field_tag 'password', :class => 'form-control', params[:Password], :placeholder => "Password" %>
  </div>
  <button type="submit" class="btn btn-default">Login</button>
<% end -%>